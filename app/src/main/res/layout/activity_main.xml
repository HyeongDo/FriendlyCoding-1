<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <import type="com.mashup.friendlycoding.repository.CodeBlock" />
        <import type="com.mashup.friendlycoding.viewmodel.CodeBlockViewModel" />
        <import type="com.mashup.friendlycoding.MainActivity" />
        <import type="com.mashup.friendlycoding.viewmodel.PrincessViewModel" />

        <variable
            name="codeBlockVM"
            type="CodeBlockViewModel" />
        <variable
            name="princessVM"
            type="com.mashup.friendlycoding.viewmodel.PrincessViewModel" />
        <variable
            name="codeBlock"
            type="java.util.ArrayList&lt;CodeBlock&gt;" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraintLayout"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="#ededed"
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:src="@{codeBlockVM.gridImage}"
                app:layout_constraintDimensionRatio="1:1"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_gravity="center"
                android:src="@{codeBlockVM.monsterImage}"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/imageView" />

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:src="@{codeBlockVM.sunnyImage}"
                android:tint="#F0E368"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />
            <ImageView
                android:id="@+id/ivPrinsecess"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginStart="136dp"
                android:layout_marginTop="80dp"
                android:src="@{codeBlockVM.princessImage}"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tvWin"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:background="#BC000000"
                android:gravity="center"
                android:text="WIN!!!!!"
                android:textColor="@color/White"
                android:textSize="60sp"
                android:textStyle="bold"
                android:visibility="invisible"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rc_code_block_list"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toTopOf="@id/rc_input_code"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/rc_input_code"
            app:layout_constraintTop_toBottomOf="@id/constraintLayout"
            app:layout_constraintVertical_bias="0.0" />

        <ImageButton
            android:id="@+id/run"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_margin="10dp"
            android:background="@color/White"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_slideshow"
            android:tint="@color/ic_replay_red"
            android:onClick="@{(view)->codeBlockVM.run(view)}"
            app:layout_constraintEnd_toEndOf="@+id/rc_code_block_list"
            app:layout_constraintTop_toTopOf="@+id/rc_code_block_list" />

        <ImageButton
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@color/White"
            android:scaleType="centerCrop"
            android:layout_marginTop="10dp"
            android:onClick="@{()->codeBlockVM.clearBlock()}"
            android:src="@drawable/ic_replay"
            android:tint="@color/icon_color"
            app:layout_constraintEnd_toEndOf="@+id/run"
            app:layout_constraintTop_toBottomOf="@+id/run" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rc_input_code"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginStart="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>